---
import LibraryStyleLayout from "../../astro/layouts/LibraryStyleLayout.astro";
---

<LibraryStyleLayout>
  <main class="responsive-container">
    <h1>Uploaded Files</h1>
    <ul class="tree-list-container">
      <li>
        <details open>
          <summary>Documents</summary>
          <ul>
            <li>Report.pdf</li>
            <li>Invoice.docx</li>
            <li>Presentation.pptx</li>
          </ul>
        </details>
      </li>
      <li>
        <details>
          <summary>Images</summary>
          <ul>
            <li>photo1.jpg</li>
            <li>photo2.png</li>
            <li>logo.svg</li>
          </ul>
        </details>
      </li>
      <li>
        <details>
          <summary>Videos</summary>
          <ul>
            <li>intro.mp4</li>
            <li>demo.mov</li>
            <li>presentation.avi</li>
          </ul>
        </details>
      </li>
    </ul>
  </main>

  <footer>
    <p>&copy; 2025 MySite. All rights reserved.</p>
  </footer>
</LibraryStyleLayout>
